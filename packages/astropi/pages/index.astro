---
import { userConfig } from "virtual:astropi-user-config"
import Layout from "../layouts/Layout.astro"
import LandingHero from "../layouts/landing/LandingHero.astro"
import LandingFeatures from "../layouts/landing/LandingFeatures.astro"
/**
 * This is the default landing page of an Astropi project.
 */
const { projectName } = userConfig
---

<Layout title="Welcome" description="This a new Astropi project!">
  <main class="landing-main">
    <LandingHero />
    <LandingFeatures />
  </main>
</Layout>

<style is:global>
  @layer components {
    main.landing-main {
      width: 1024px;
    }
  }
</style>
